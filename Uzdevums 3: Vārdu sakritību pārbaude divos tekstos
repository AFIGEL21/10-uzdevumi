import re

# Funkcija, kas izvada vārdu sakritības procentuālo līmeni
def calculate_word_match(text1, text2):
    # Iztīram tekstus no pieturzīmēm un pārvēršam tos uz mazajiem burtiem
    text1 = re.sub(r'[^\w\s]', '', text1.lower())
    text2 = re.sub(r'[^\w\s]', '', text2.lower())

    # Sadalam tekstus pa vārdiem
    words1 = set(text1.split())
    words2 = set(text2.split())

    # Atrodam kopīgus vārdus
    common_words = words1.intersection(words2)

    # Aprēķinām sakritības līmeni
    total_words = len(words1.union(words2))  # Visi vārdi no abiem tekstiem
    match_percentage = (len(common_words) / total_words) * 100  # Procentiālais sakritības līmenis

    return common_words, match_percentage

# Teksta piemēri
text1 = "Rudens lapas ir dzeltenas un oranžas. Lapas klāj zemi un padara to krāsainu."
text2 = "Krāsainas rudens lapas krīt zemē. Lapas ir oranžas un dzeltenas."

# Iegūstam sakritīgo vārdus un procentuālo sakritību
common_words, match_percentage = calculate_word_match(text1, text2)

# Izdrukājam rezultātus
print(f"Kopīgie vārdi: {', '.join(common_words)}")
print(f"Sakritības līmenis: {match_percentage:.2f}%")
